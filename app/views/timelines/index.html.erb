<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1>Timelines</h1>
      <%= link_to 'Add a new timeline', new_timeline_path, class: 'btn btn-sm btn-outline-light btn-add mb-3' %>
      <div class="row">
        <div class="col-xl-6 col-lg-8">
          <% @timelines.each do |timeline| %>
            <%= link_to timeline, class: 'timeline-preview mb-2' do %>
              <div class="title">
                <%=timeline.title %>
              </div>
              <div class="actions">
                <%= button_to 'Delete', timeline, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-link text-danger' %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
