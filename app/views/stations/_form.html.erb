<div class="row mt-4">
  <div class="col-md-8">
    <%= form_with model: @station, local: true do |form| %>
      <% if @station.errors.any? %>
        <div id="error_explanation" class="bg-danger text-white p-3 my-3">
          <div class="lead">
            <%= pluralize(@station.errors.count, "error") %> prevented
            this event from being saved:
          </div>
          <ul>
            <% @station.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label :width %><br>
          <%= form.text_field :width, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6">
          <%= form.label :height %><br>
          <%= form.text_field :height, class: 'form-control' %>
        </div>
      </div>

      <%= form.submit nil, { class: 'btn btn-primary'} %>
      <%= link_to 'Back', stations_path, { class: 'btn btn-link text-light' } %>
    <% end %>
  </div>
</div>
